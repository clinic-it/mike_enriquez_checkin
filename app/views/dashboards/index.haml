.container-fluid
  .col-md-12
    = form_for @checkin, :class => 'form-inline', :method => :post do |f|
      .card-deck
        .card
          .card-block
            .card-title What I did yesterday
            - @projects.each do |project|
              - unless project.iterations(:scope => 'current_backlog').length == 0
                %h3{:data => {:toggle => 'collapse', :target => "#yesterday-#{project_name_to_id project}"}}= project.name
                .collapse{:id => "yesterday-#{project_name_to_id project}"}
                  - project.iterations(:scope => 'current_backlog').each do |iteration|
                    - iteration.stories.each do |story|
                      %label.checkbox
                        = f.check_box :yesterday, {:multiple => true},
                          {:project_id => story.project_id,:title => story.name, :url => story.url, :current_state => story.current_state, :estimate => story.estimate, :task_type => story.story_type, :task_id => story.id}
                        = story.name
                      %br
                %hr

        .card
          .card-block
            .card-title What I will do today
            - @projects.each do |project|
              - unless project.iterations(:scope => 'current_backlog').length == 0
                %h3{:data => {:toggle => 'collapse', :target => "#today-#{project_name_to_id project}"}}= project.name
                .collapse{:id => "today-#{project_name_to_id project}"}
                  - project.iterations(:scope => 'current_backlog').each do |iteration|
                    - iteration.stories.each do |story|
                      %label.checkbox
                        = f.check_box :today, {:multiple => true},
                          {:project_id => story.project_id,:title => story.name, :url => story.url, :current_state => story.current_state, :estimate => story.estimate, :task_type => story.story_type, :task_id => story.id}
                        = story.name
                      %br
                %hr

      = f.submit
