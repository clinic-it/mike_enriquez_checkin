.col-md-12.row
  .card-deck.col-md-6
    .card
      .card-header.text-center Average
      .card-block.row
        %h3.col= @today.average_load
        .col
          - value = @today.average_load - @yesterday.average_load
          .col-md-12
            = icon_tag value
          .col-md-12
            = value

    .card
      .card-header.text-center Low
      .card-block.row
        %h4.col= @today.lowest_load
        .col
          - value = @today.lowest_load - @yesterday.lowest_load
          .col-md-12
            = icon_tag value
          .col-md-12
            = value


    .card
      .card-header.text-center High
      .card-block.row
        %h4.col= @today.highest_load
        .col
          - value = @today.highest_load - @yesterday.highest_load
          .col-md-12
            = icon_tag value
          .col-md-12
            = value

  .col-md-6
    .card
      .card-header.text-center Status
      .card-block.row
        .col
          %p= "#{@today.submitted_checkins} SUBMITTED"
          %p= "#{@today.pending_checkins} LEFT"
        .col
          = link_to 'VIEW', summary_checkin_path

  .col-md-12
    = column_chart @chart_data, :ytitle => 'Load'
