.uk-card.uk-card-default.uk-card-body.uk-position-center.uk-box-shadow-xlarge{:class => 'uk-width-1-3@m'}
  .uk-text-center
    %h3
      %strong Sign In
    Please sign in to continue.
  %br
  = form_for :session, :url => sessions_path, :method => :post do |f|
    = f.label :username
    = f.text_field :username, :class => 'uk-input'
    %br
    %br
    = f.label :password
    = f.password_field :password, :class => 'uk-input'
    %br
    %br
    = f.submit 'Submit', :class => 'uk-button uk-button-primary uk-width-1-1', :data => {:disable_with => 'Please wait'}


